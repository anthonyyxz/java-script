<!DOCTYPE html>
<html>
<head>
  <title>Venda de Camisetas</title>
</head>
<body>
  <h2>Venda de Camisetas</h2>
  <button onclick="calcularVenda()">Calcular Valor</button>

  <script>
    function calcularVenda() {
      let p = parseInt(prompt("Quantidade de camisetas P:"));
      let m = parseInt(prompt("Quantidade de camisetas M:"));
      let g = parseInt(prompt("Quantidade de camisetas G:"));
      let total = (p * 10) + (m * 12) + (g * 15);
      alert("Valor total arrecadado: R$ " + total.toFixed(2));
    }
  </script>
</body>
</html>
